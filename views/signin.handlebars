
<!--handlebars -->
<div class="container">
<div class="jumbotron" style="margin: 50px; margin-top:150px;">
  <h1>Sign in</h1>
  <p> </p>
  <p style="padding:10px;"> Please sign-in with your account to begin.</p>
  <p>
    <a data-toggle="collapse" href="#local" class="btn btn-warning btn-lg" role="button"><span class="glyphicon glyphicon-user"></span> Sign in Locally</a>
    
  </p>

  <div id="local" class="collapse">
    <a data-toggle="collapse" href="#local-sign-in" class="btn btn-default btn-md" role="button">I already have an account</a>
    <a data-toggle="collapse" href="#local-reg" class="btn btn-default btn-md" role="button">I need to make an account</a>
  </div>

  <form id="local-sign-in" class="collapse"  method="post">
    <div>
        <p></p>
        <label>Username:</label>
        <input type="text" name="username"/>
    </div>
    <div>
        <label>Password:</label>
        <input type="password" name="password"/>
    </div>
    <div>
        <input id="" type="submit" class="btn btn-primary btn-sm" value="Log In"/>
    </div>
  </form>

  <form id="local-reg" class="collapse"  method="post">
    <div>
        <p></p>
        <label>New Username:</label>
        <input type="text" name="signupEmail"/>
    </div>
    <div>
        <label>New Password:</label>
        <input type="password" name="signupPassword"/>
    </div>
    <div>
        <input id="" type="submit" class="btn btn-primary btn-sm" value="Register"/>
    </div>
  </form>
</div>